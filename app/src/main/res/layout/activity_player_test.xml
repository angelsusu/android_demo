<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:paddingTop="20dp">


    <Button
        android:id="@+id/btn_SoundPool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SoundPool播放音频" />

    <Button
        android:id="@+id/btn_MediaPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MediaPlayer播放音频" />

    <Button
        android:id="@+id/btn_IjkMediaPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IjkMediaPlayer播放音频" />

    <Button
        android:id="@+id/btn_TXPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TXPlayer播放音频" />

    <Button
        android:id="@+id/btn_ExoPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ExoPlayer播放音频" />

</LinearLayout>